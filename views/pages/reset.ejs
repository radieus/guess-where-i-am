<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <% if (isLoggedIn) { %>
    <%- include('../partials/header'); %>
    <% } else { %>
    <%- include('../partials/header_noauth'); %>
    <% } %>

    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1 content">
                <h1>Reset the password</h1>

                <p>Enter your new password below:</p>

                <form id="reset" class="reset">
                    <div class="form-group">
                        <label for="inputNewPassword">New password</label>
                        <input type="password" class="form-control" id="inputNewPassword" aria-describedby="newPasswordHelp"
                            placeholder="Pa$$w0rd!">
                        <small id="passwordHelp" class="form-text text-muted">The longer, the better.</small>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/reset.js"></script>
</body>

</html>